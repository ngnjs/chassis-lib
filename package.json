    }
  ],
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "http://ngn.js.org",
  "devDependencies": {
    "browserify": "^13.0.0",
    "buffer-equal-constant-time": "^1.0.1",
    "caniuse-api": "^1.4.1",
    "del": "^2.2.0",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-header": "^1.7.1",
    "gulp-uglify": "^1.5.3",
    "karma": "^0.13.22",
    "karma-browserify": "^5.0.3",
