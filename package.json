{
  "name": "ngn-chassis",
  "version": "1.0.40",
  "description": "The UI unframework. Use event-oriented design, simplified data structures, and basic building blocks to create apps.",
  "main": "index.js",
  "scripts": {
    "test": "gulp build && karma start karma.conf.js",
    "dev": "karma start karma.local.conf.js && standard --verbose | snazzy",
